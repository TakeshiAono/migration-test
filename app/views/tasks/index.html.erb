<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th><%= t('view.title') %></th>
      <th><%= t('view.content') %></th>
      <th><%= t('view.created_at') %></th>
      <th><%= t('view.deadline') %></th>
      <th><%= t('view.status') %></th>
      <th><%= t('view.priority') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class ="task_row">
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <td><%= task.deadline %></td>
        <td><%= t("enums.task.status.#{task.status}") %></td>
        <td><%= t("enums.task.priority.#{task.priority}") %></td>
        <td><%= link_to t('view.show'), task %></td>
        <td><%= link_to t('view.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('view.destroy'), task, method: :delete, data: { confirm: t('view.are_you_sure?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('view.new_task'), new_task_path %>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
