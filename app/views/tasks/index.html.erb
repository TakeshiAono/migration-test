<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<table>
  <thead>
      <%= form_with(scope: :search, url: tasks_path, method: :get, local: true) do |f| %>
        <h2>タイトル検索</h2>
        <%= f.label :title_search %>
        <%= f.text_field :title_search %>

        <h2>ステータス検索</h2>
        <%= f.label :status_search %>
        <%= f.select :status_search, Task.statuses.keys.map {|k| [t("enums.task.status.#{k}"), k]},{prompt: '---'} %>

        <%= f.submit '検索' %>
      <% end %>

    <tr>
      <th><%= t('view.title') %></th>
      <th><%= t('view.content') %></th>
      <th><%= t('view.created_at') %></th>
      <th><%= t('view.deadline') %></th>
      <th><%= t('view.status') %></th>
      <th><%= t('view.priority') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class ="task_row">
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <td><%= task.deadline %></td>
        <td><%= t("enums.task.status.#{task.status}") %></td>
        <td><%= t("enums.task.priority.#{task.priority}") %></td>
        <td><%= link_to t('view.show'), task %></td>
        <td><%= link_to t('view.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('view.destroy'), task, method: :delete, data: { confirm: t('view.are_you_sure?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


<%= link_to t('view.new_task'), new_task_path %>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to "優先順位が高い順でソートする", tasks_path(sort_priority: "true") %>
<%= paginate @tasks %>
